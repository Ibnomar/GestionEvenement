<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10sp">

        <EditText
            android:layout_marginTop="30dp"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:id="@+id/nbPersonne"
            android:hint="Saisissez le nombre de personnes"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_below="@+id/linearLayout"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure quelconque"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:layout_marginTop="170sp" />


    </LinearLayout>

    <EditText android:id="@+id/edittext1"
        android:hint=" Heure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/button1"
        android:maxLines="1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150sp"
        android:textSize="12sp"
        android:layout_marginRight="20sp"
        android:editable="true" />
    <Button android:id="@+id/button1"
        android:text="Debut"

        android:layout_width="60dp"
        android:layout_height="25dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentRight="true"
        android:onClick="button_debut_creneau"
        android:layout_marginTop="160sp"
        android:background="@drawable/buttonshape"
        style="@style/ContentText"
        android:layout_marginRight="20sp" />


    <EditText android:id="@+id/edittext2"
        android:hint=" Heure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/button2"
        android:maxLines="1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="200sp"
        android:textSize="12sp"
        android:layout_marginRight="20sp"
        android:editable="true" />
    <Button android:id="@+id/button2"
        android:text="Fin"

        android:layout_width="60dp"
        android:layout_height="25dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentRight="true"
        android:onClick="button_fin_creneau"
        android:layout_marginTop="210sp"
        android:background="@drawable/buttonshape"
        style="@style/ContentText"
        android:layout_marginRight="20sp" />

    <EditText android:id="@+id/edittext3"
        android:hint="Date "
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/button3"
        android:maxLines="1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100sp"
        android:textSize="12sp"
        android:layout_marginRight="20sp"
        android:editable="true" />
    <Button android:id="@+id/button3"
        android:text="Date"

        android:layout_width="60dp"
        android:layout_height="25dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100sp"
        android:background="@drawable/buttonshape"
        style="@style/ContentText"
        android:layout_marginRight="20sp" />
    <com.example.macbookpro.Sopra.View.SousGui.Outils_vues.MultiSelectionSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mySpinner"
        android:layout_marginTop="290sp"
        />

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Rechercher"
            android:id="@+id/buttonRecherche"
            android:layout_marginTop="400sp"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape"
            style="@style/ContentText"/>

    </LinearLayout>
    <TimePicker android:id="@+id/timePicker1"
        android:layout_width="0sp"
        android:layout_height="0sp"/>
    <DatePicker
        android:id="@+id/dpResult"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</RelativeLayout>