<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".View.SousGui.login_activity"
    android:orientation="vertical"
    android:weightSum="1"
    android:logo="@drawable/sopra">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNickname"
        android:layout_gravity="center_horizontal"
        android:hint="Nickname"
        android:textColorHint="#0D0D0D"
        android:layout_above="@+id/txtPassword"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="60dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:textColorHint="#0D0D0D"
        android:layout_above="@+id/btnAdmin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="132dp"
        android:layout_marginLeft="60dp" />

    <Button

        android:text="User"

        android:id="@+id/btnUser"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        style="@style/ContentText"
        android:layout_above="@+id/btnAdmin"
        android:layout_alignLeft="@+id/btnAdmin"
        android:layout_alignStart="@+id/btnAdmin"
        android:layout_marginBottom="28dp" />

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:background="@drawable/buttonshape"
        android:text="Admin"
        style="@style/ContentText"
        android:id="@+id/btnAdmin"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/LogoYuli"
        android:layout_above="@+id/txtNickname"
        android:layout_alignRight="@+id/btnAdmin"
        android:layout_alignEnd="@+id/btnAdmin"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="120dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/people"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txtNickname"
        android:layout_alignTop="@+id/txtNickname" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/security"
        android:layout_alignBottom="@+id/txtPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtPassword"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

</RelativeLayout>
