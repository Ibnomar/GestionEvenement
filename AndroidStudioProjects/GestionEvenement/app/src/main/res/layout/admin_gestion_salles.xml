<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SousGui.Vues_admin.Gestion_Salles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nom du site géré"
            android:id="@+id/nom_site_gere"
            android:layout_gravity="center_horizontal"
            android:allowUndo="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18sp" />

        <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choixSalle"
        android:layout_gravity="center"
        android:layout_marginTop="25sp" />

    <Button

        android:layout_width="110dp"
        android:layout_height="40dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Editer la salle"
        android:id="@+id/editerSalle"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:background="@drawable/buttonshape"
        style="@style/ContentText"/>

    <Button

        android:layout_width="90dp"
        android:layout_height="40dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Supprimer"
        android:id="@+id/suppSalle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:background="@drawable/buttonshape"
        style="@style/ContentText"/>
   </LinearLayout>


        <Button

            android:layout_width="90dp"
            android:layout_height="40dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Ajouter"
            android:id="@+id/btnValiderSalle"
            android:background="@drawable/buttonshape"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            style="@style/ContentText"
            android:layout_marginLeft="20sp" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:maxLines="1"
            android:id="@+id/editText"
            android:layout_toRightOf="@+id/btnValiderSalle"
            android:layout_toEndOf="@+id/btnValiderSalle"
            android:layout_alignBottom="@+id/btnValiderSalle"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal"
            android:hint="Rentrer une salle"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_marginLeft="20sp" />



</RelativeLayout>